{
  "name": "frontpage",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/frontpage",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project frontpage --web",
  "targets": {
    "checks": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx typecheck frontpage", "nx lint frontpage"],
        "parallel": true
      }
    },
    "compose-other-sitemaps": {
      "command": "tsx --tsconfig apps/frontpage/tsconfig.json apps/frontpage/scripts/composeOtherSitemaps.ts"
    },
    "fetch-docs": {
      "command": "tsx --tsconfig apps/frontpage/tsconfig.json apps/frontpage/scripts/getLocalDocs.ts"
    },
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx fetch-docs frontpage",
          "nx compose-other-sitemaps frontpage"
        ],
        "parallel": true
      }
    },
    "prepare-and-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build frontpage",
          "next-sitemap --config apps/frontpage/next-sitemap.config.js"
        ],
        "parallel": false
      },
      "dependsOn": ["prepare"]
    },
    "typecheck": {
      "command": "tsc --noEmit -p apps/frontpage/tsconfig.json"
    }
  }
}
